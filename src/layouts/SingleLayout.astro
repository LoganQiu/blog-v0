---
import BaseLayout from "./BaseLayout.astro";
import PostNav from "@/components/PostNav.astro";

export interface Props {
  title?: string;
  subtitle?: string;
  description?: string;
  author?: string;
  pubdate?: Date;
  moddate?: Date | null;
  prevPost?: any;
  nextPost?: any;
  ogImage?: string;
  katex?: boolean;
}

const { title, subtitle, description, author, pubdate, moddate, prevPost, nextPost, ogImage, katex } = {
  ...Astro.props,
  ...Astro.props.frontmatter,
};
---

<BaseLayout
  title={title}
  subtitle={subtitle}
  description={description}
  author={author}
  pubdate={pubdate}
  moddate={moddate}
  pageType="single"
  ogImage={ogImage}
  katex={katex}
>
  <slot />
  <PostNav prev={prevPost} next={nextPost} />
</BaseLayout>
